<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="crashr.mapshackathon.com.crashr.ui.AddListingActivity">

    <!--<ImageView-->
    <!--android:id="@+id/listing_img"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_weight="0.35" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/edit_fields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:ems="10"
                android:hint="Address"
                android:inputType="textPostalAddress"
                android:textSize="25sp"
                android:theme="@style/AppTheme" />

            <EditText
                android:id="@+id/edit_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/edit_dinner"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/edit_dinner"
                android:layout_below="@+id/edit_address"
                android:ems="10"
                android:hint="Cost"
                android:inputType="numberDecimal"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/edit_dinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dinner"
                android:textSize="30sp"
                android:layout_below="@+id/edit_cost"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <CheckBox
                android:id="@+id/edit_shower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/edit_dinner"
                android:text="Shower"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/edit_breakfast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/edit_shower"
                android:layout_toRightOf="@+id/edit_shower"
                android:text="Breakfast"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/edit_weed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/edit_breakfast"
                android:text="Weed"
                android:textSize="30sp" />
        </RelativeLayout>

        <EditText
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/edit_description"
            android:layout_gravity="bottom"
            android:hint="Description"
            android:textSize="25sp" />
    </LinearLayout>
</LinearLayout>
